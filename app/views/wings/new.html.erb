<% navigation_add 'Wings', :controller => 'wings', :action => 'index' %>
<% navigation_add 'New', :controller => 'wings', :action => 'new' %>


<!-- Sec --> 

<%#= render  partial: 'master_settings/master_settings_left' %>
<!-- <h4 class="mg-h4"><%#= t('wings') %></h4> -->
<div class="row">
  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 mc-margin-bottom-20 ">
    <h3 class="form-section-heading ">
      <b class="col-lg-12 col-md-12 col-sm-12 col-xs-12">New Wing</b>
    </h3>
  </div>
</div>
<!-- <div> -->
  <%= form_for :wings, url: wings_path, :html => {
                              :id => 'wingStudentID' } do |f| %>
  <div class="row mc-padding-20 form-section-box">

  <%= f.hidden_field :is_deleted, :value => 0 %>
  <%= f.hidden_field :mg_school_id, :value => session[:current_user_school_id] %>
  <%= f.hidden_field :created_by, :value => session[:user_id] %>
  <%= f.hidden_field :updated_by, :value => session[:user_id] %>
    <div class="form-group col-lg-4 col-md-4 col-sm-4 col-xs-12"> 
      <label for="first_name"><%=t('wing_name') %>
                <span class="required-field">*</span>
            </label>
      <%= f.text_field :wing_name ,:class=>"form-control"%>
      </div>
</div>
<br>
<p>
      <%#= f.submit "Submit" ,:id => "WingFormID" ,:class=>"mg-small-form-btn"%>
      <button onclick="$(this).closest('form').submit()" id="WingFormID" class="mg-small-form-btn submit mc-margin-bottom-20 flat-button"><%=t("save")%></button>
       <%= link_to t('cancel'), :back, {:class=>"mg-small-form-btn cancel-form-dialog flat-button  margin-left-10"} %>

    </p>
    
  <% end %>
<!-- <button class="cancel-form-dialog"><#%= t('cancel') %></button> -->

<%#= render partial: 'schools/school_left_close' %>

<script>
  $(document).ready(function(){
    focusCurrentTab("wingListAID","schoolWingLiID");
        focusMasterSettings();
    $("#wingStudentID").validate({
                      rules: {
                "wings[wing_name]": {required: true}
                
                }
    });
  });


</script>