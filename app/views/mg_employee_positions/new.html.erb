<% navigation_add 'Employee Profile', mg_employee_positions_path %>
<% navigation_add t('New'),'/mg_employee_positions/new' %>

<%= form_for @employee_position,  html: {role: :form} do |f| %>

  <%= f.hidden_field :is_deleted, :value => 0 %>
  <%= f.hidden_field :mg_school_id, :value => session[:current_user_school_id] %>
<h4 class="form-section-heading mc-margin-bottom-20"><%=t('New Employee Profile')%></h4>
    <div class="row mc-padding-20 form-section-box">
       <div class="form-group col-lg-4 col-md-4 col-sm-4 col-xs-12">
        <label for="mg-label"><%= t('selectcategory') %><span class="required-field"> *</span></label><br>
        <%=f.select :mg_employee_category_id,options_for_select(get_employee_position),{:include_blank => 'Select a Category'},:class=>"form-control" %>
       <%#=f.select :mg_account_id,options_for_select(accounts),{:include_blank => t('Select')},:class=> "mg-select-btn" %><br/>
    </div>
    <div class="form-group col-lg-4 col-md-4 col-sm-4 col-xs-12">
    <label for="mg-label"><%= t('profilename') %><span class="required-field"> *</span></label></br>
    <%= f.text_field :position_name ,:class=>"form-control"%>
  </div>
<div style="display:none">
    <p>
      <label class="mg-label"><%= t('status') %></label>
      <br />
      <%= f.label :status, t("active"), :value => "true" ,:class=>"mg-label-inner-form" %>
      <%= f.radio_button :status, false , :checked => true%>
      <%= f.label :status, t("inactive"), :value => "false" ,:class=>"mg-label-inner-form"%>
      <%= f.radio_button :status, true %> <br />
    </p>
</div>
</div>
<br>
  <p>
    <%#= f.submit "Submit" ,:id => "PositionFormID" ,:class=>"mg-small-form-btn"%>
    <a onclick="$(this).closest('form').submit()" id="DepartmentFormID" class="mg-small-form-btn submit mc-margin-bottom-20 flat-button"><%=t("save")%></a>
     <%= link_to t('cancel'), :back, {:class=>"mg-small-form-btn cancel-form-dialog flat-button cancel-form-dialog margin-left-10"} %>
  </p>
  
<% end %>

