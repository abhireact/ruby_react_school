<%#= render partial: 'student_left_close' %>
<script >

 $(document).ready(function () {
  
    focusCurrentTab("viewStudentCustomFieldAID","viewStudentCustomFieldLiID");
    focusMasterSettings();

    $("#studentCustomFieldsFormID").validate({
      rules:{
        "demo[name]":{required:true},
        "demo[data_type]":{required:true},
        "demo[text_data]":{required:true}
      }
    });

  });
</script>