<!-- Sec --> 
     <%= fields_for (addresstype) do |adrs| %>
         <div class="form-content">
          <div class="form-content-inner">         
        <%if addresstype=="Correspondance"%>

        <%= adrs.hidden_field :address_type, :value => "Correspondance" %>
         
        <%end%>
        
        <%if addresstype=="Permanent"%>
        <%= adrs.hidden_field :address_type, :value => "Permanent" %>
        
        <%end%>
         <%if addresstype=="workAddress"%>
        <%= adrs.hidden_field :address_type, :value => "workAddress" %>
         <h4 class="mg-h4" ><%= t('officeaddress') %> </h4>
        <%end%>
        <%if addresstype=="Temporary"%>
        <%= adrs.hidden_field :address_type, :value => "Temporary" %>
        <%end%>

       <%= adrs.hidden_field :is_deleted, :value => 0 %>
       <%= adrs.hidden_field :mg_school_id, :value =>session[:current_user_school_id]%>
           
        <div class="row mc-padding-20 form-section-box">
        <div class = "row">
            <div class="form-group col-lg-4 col-md-4 col-sm-4 col-xs-12">
                    <label  for="address_line1"><%= t('addressline1') %>
                     
                    </label>
                     <%= adrs.text_field :address_line1 ,:class=>"form-control"%>
                 </div>

            <div class="form-group col-lg-4 col-md-4 col-sm-4 col-xs-12">
                    <label for="address_line2"><%= t('addressline2') %></label>
                 
                    <%= adrs.text_field :address_line2 ,:class=>"form-control"%>
                  </div>

            <div class="form-group col-lg-4 col-md-4 col-sm-4 col-xs-12">
                     <label   for="street"><%= t('street') %></label>
                     <%= adrs.text_field :street ,:class=>"form-control"%>
                 </div>
                </div>

        <div class = "row">
            <div class="form-group col-lg-4 col-md-4 col-sm-4 col-xs-12">
                    <label  for="landmark"><%= t('landmark') %>
                    </label>
                     <%= adrs.text_field :landmark ,:class=>"form-control"%>
                     </div>

            <div class="form-group col-lg-4 col-md-4 col-sm-4 col-xs-12">
                    <label   for="city"><%= t('city') %></label>
                    
                    <%= adrs.text_field :city ,:class=>"form-control"%>
                  </div>

            <div class="form-group col-lg-4 col-md-4 col-sm-4 col-xs-12">
                     <label for="state"><%= t('state') %>
                     </label>
                    <%= adrs.text_field :state ,:class=>"form-control"%>
                 </div>
                </div>

        <div class = "row">
            <div class="form-group col-lg-4 col-md-4 col-sm-4 col-xs-12">
                    <label  for="pin_code"><%= t('pincode') %>
                    </label>
                     <%= adrs.text_field :pin_code ,:class=>"form-control"%>
                    </div>

            <div class="form-group col-lg-4 col-md-4 col-sm-4 col-xs-12"> 
                    <label  for="country"><%= t('country') %>
                    </label>
                     <%= adrs.text_field :country ,:class=>"form-control"%>
                  </div>
                 </div>
                 </div>
          </div>
      </div>        
   
  <!-- <hr/> -->
    <% end %>  