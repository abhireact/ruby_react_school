  $(document).ready(function(){
    $("#new_mg_employee_department").validate({
                      rules: {
                "mg_employee_department[department_name]": {required: true},
                "mg_employee_department[department_code]": {required: true},
                "mg_employee_department[status]": {required: true}
                }
    });
    focusCurrentTab("manageEmployeeDepartment","createManDeptLiID");
    
  });


</script>
